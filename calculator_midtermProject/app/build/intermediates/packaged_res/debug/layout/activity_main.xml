<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/et_number"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:autoSizeMaxTextSize="50pt"
        android:autoSizeMinTextSize="12pt"
        android:autoSizeStepGranularity="2pt"
        android:autoSizeTextType="uniform"
        android:background="@color/secondaryColor"
        android:editable="false"
        android:ems="10"
        android:gravity="center|right"
        android:inputType="textMultiLine"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_marginTop="1dp"
        android:background="@color/secondaryColor"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/btn_AC"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="30pt"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/custom_shape"
            android:backgroundTint="@color/primaryColor"
            android:onClick="acEvent"
            android:text="AC"
            android:textColor="@color/white"
            android:textSize="28sp"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/btn_Delete"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="30pt"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/custom_shape"
            android:backgroundTint="@color/primaryColor"
            android:onClick="numberDelete"
            android:text="Del"
            android:textColor="@color/white"
            android:textSize="28sp"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/btn_PlusMinus"
            android:layout_width="match_parent"
            android:layout_height="30pt"
            android:layout_weight="1"
            android:backgroundTint="@color/onPrimaryColor"
            android:text="+/-"
            app:backgroundTint="@null"
            android:textSize="35sp"
            android:onClick="numberEvent"
            android:layout_margin="10dp"
            android:background="@drawable/custom_shape"
            style="@style/Widget.AppCompat.Button.Borderless"
            />

        <Button
            android:id="@+id/btn_Multiply"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="30pt"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/custom_shape"
            android:backgroundTint="@color/onPrimaryColor"
            android:onClick="operatorEvent"
            android:text="x"
            android:textSize="30sp"
            app:backgroundTint="@null"
            android:textAllCaps="false"
         />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:background="@color/secondaryColor"
        >
        <Button
            android:id="@+id/btn_7"
            android:layout_width="match_parent"
            android:layout_height="30pt"
            android:layout_marginRight="1pt"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:text="7"
            android:textColor="@color/primaryColor"
            android:textSize="35sp"
            android:onClick="numberEvent"
            app:backgroundTint="@null"
            android:layout_margin="10dp"
            android:background="@drawable/custom_shape"
            style="@style/Widget.AppCompat.Button.Borderless"
            />
        <Button
            android:id="@+id/btn_8"
            android:layout_width="match_parent"
            android:layout_height="30pt"
            android:layout_weight="1"
            android:onClick="numberEvent"
            android:text="8"
            android:textColor="@color/primaryColor"
            android:textSize="35sp"
            android:backgroundTint="@color/white"
            app:backgroundTint="@null"
            android:layout_margin="10dp"
            android:background="@drawable/custom_shape"
            style="@style/Widget.AppCompat.Button.Borderless"
            />
        <Button
            android:id="@+id/btn_9"
            android:layout_width="match_parent"
            android:layout_height="30pt"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:text="9"
            android:textColor="@color/primaryColor"
            android:textSize="35sp"
            android:onClick="numberEvent"
            app:backgroundTint="@null"
            android:layout_margin="10dp"
            android:background="@drawable/custom_shape"
            style="@style/Widget.AppCompat.Button.Borderless"/>

        <Button
            android:id="@+id/btn_Minus"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="30pt"
            android:layout_margin="10dp"
            app:backgroundTint="@null"
            android:layout_weight="1"
            android:background="@drawable/custom_shape"
            android:backgroundTint="@color/onPrimaryColor"
            android:onClick="operatorEvent"
            android:text="-"
            android:textColor="@color/white"
            android:textSize="35dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:background="@color/secondaryColor">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="3"
            android:background="@color/secondaryColor">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="3"
                android:background="@color/secondaryColor"
                >

                <Button
                    android:id="@+id/btn_4"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="30pt"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_shape"
                    android:backgroundTint="@color/white"
                    android:onClick="numberEvent"
                    android:text="4"
                    android:textSize="35sp"
                    app:backgroundTint="@null"
                    android:textColor="@color/primaryColor"/>

                <Button
                    android:id="@+id/btn_5"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="30pt"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_shape"
                    android:backgroundTint="@color/white"
                    android:onClick="numberEvent"
                    android:text="5"
                    app:backgroundTint="@null"
                    android:textColor="@color/primaryColor"
                    android:textSize="35sp"/>

                <Button
                    android:id="@+id/btn_6"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="30pt"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_shape"
                    android:backgroundTint="@color/white"
                    android:onClick="numberEvent"
                    android:text="6"
                    app:backgroundTint="@null"
                    android:textColor="@color/primaryColor"
                    android:textSize="35sp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="3"
                android:background="@color/secondaryColor">

                <Button
                    android:id="@+id/btn_1"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="30pt"
                    android:layout_margin="10dp"
                    app:backgroundTint="@null"
                    android:layout_weight="1"
                    android:background="@drawable/custom_shape"
                    android:backgroundTint="@color/white"
                    android:onClick="numberEvent"
                    android:text="1"
                    android:textColor="@color/primaryColor"
                    android:textSize="35sp" />

                <Button
                    android:id="@+id/btn_2"
                    android:layout_width="match_parent"
                    android:layout_height="30pt"
                    app:backgroundTint="@null"
                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    android:text="2"
                    android:textColor="@color/primaryColor"
                    android:textSize="35sp"
                    android:onClick="numberEvent"
                    android:layout_margin="10dp"
                    android:background="@drawable/custom_shape"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    />
                <Button
                    android:id="@+id/btn_3"
                    android:layout_width="match_parent"
                    android:layout_height="30pt"
                    app:backgroundTint="@null"
                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    android:text="3"
                    android:textColor="@color/primaryColor"
                    android:textSize="35sp"
                    android:onClick="numberEvent"
                    android:layout_margin="10dp"
                    android:background="@drawable/custom_shape"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="3"
                android:background="@color/secondaryColor">
                <Button
                    android:id="@+id/btn_0"
                    android:layout_width="match_parent"
                    android:layout_height="30pt"
                    app:backgroundTint="@null"
                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    android:text="0"
                    android:textSize="35sp"
                    android:textColor="@color/primaryColor"
                    android:onClick="numberEvent"
                    android:layout_margin="10dp"
                    android:background="@drawable/custom_shape"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    />
                <Button
                    android:id="@+id/btn_Dot"
                    android:layout_width="match_parent"
                    android:layout_height="30pt"
                    app:backgroundTint="@null"
                    android:layout_weight="2"
                    android:backgroundTint="@color/white"
                    android:text="."
                    android:textColor="@color/primaryColor"
                    android:textSize="40sp"
                    android:onClick="numberEvent"
                    android:layout_margin="10dp"
                    android:background="@drawable/custom_shape"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:weightSum="3"
            android:orientation="vertical"
            android:background="@color/secondaryColor">
            <Button
                android:id="@+id/btn_Plus"
                android:layout_width="match_parent"
                android:layout_height="30pt"
                android:layout_weight="1"
                app:backgroundTint="@null"
                android:backgroundTint="@color/onPrimaryColor"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="35dp"
                android:onClick="operatorEvent"
                android:layout_margin="10dp"
                android:background="@drawable/custom_shape"
                style="@style/Widget.AppCompat.Button.Borderless"/>
            <Button
                android:id="@+id/btn_Divide"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="30pt"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/custom_shape"
                android:backgroundTint="@color/onPrimaryColor"
                android:onClick="operatorEvent"
                android:text="/"
                android:textSize="35sp"
                android:textColor="@color/white"
                app:backgroundTint="@null"
                />

            <Button
                android:id="@+id/btn_Equal"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="30pt"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/custom_shape"
                android:backgroundTint="@color/onPrimaryColor"
                app:backgroundTint="@null"
                android:onClick="equalEvent"
                android:text="="
                android:textColor="@color/white"
                android:textSize="35sp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>